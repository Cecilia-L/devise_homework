<p id="notice"><%= notice %></p>

<h1>비밀모임의 게시판</h1>


<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th>제목</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title , post %></td>
        
      
        <td><%= link_to '삭제', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새 글 쓰기', new_post_path, {:style=>'color:#000000; background-color: yellow; border-radius: 8px; font-weight: bold; font-size: 13px; ', :class => "css_class"} %>



